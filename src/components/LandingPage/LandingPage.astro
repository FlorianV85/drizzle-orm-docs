---
import Supporting from "./Supporting/Supporting.astro";
import Runtimes from "./Supporting/Runtimes";
import Databases from "./Supporting/Databases";
import DrizzleStudio from "./DrizzleStudio/DrizzleStudio.astro";
import Pricing from "./Pricing/Pricing.astro";
import Twits from "./Twits/Twits.astro";
import SponsorsLine from "./SponsorsLine/SponsorsLine.astro";
import Benchmark from "./Benchmark/Benchmark";
import NewHeader from "./NewHeader/NewHeader.astro";
import Developers from "./Developers/Developers.astro";

const runtimes: string[] = [
  "Cloudflare Workers",
  "Supabase functions",
  "Vercel functions",
  "Deno deploy",
  "Bun",
  "Lagon",
  "Fly.io",
  "ElectronJS",
  "Expo",
  "React Native",
  "Browser",
];
const databases: string[] = [
  "EdgeDB",
  "PlanetScale",
  "Neon",
  "Vercel Postgres",
  "Turso",
  "Supabase",
  "Xata",
  "PostgreSQL",
  "TiDB",
  "MySQL",
  "Tembo",
  "LiteFS",
  "SQLite Cloud",
  "SQLite",
  "Web SQLite",
];
---
<div class="wrap">
  <NewHeader />
  <Developers />
  <!--<div id="performance"></div>-->
  <Benchmark client:load />
  <Supporting
    rowsNum={4}
    imageType="liveontheedge"
    title="Live on the edge"
    description="We support every major serverful and serverless runtime"
    items={runtimes}
    data={Runtimes}
  />
  <Supporting
    rowsNum={3}
    imageType="connecteverywhere"
    title="Connect to any database"
    description="We support all platform-specific, tcp, http and websocket based drivers"
    items={databases}
    data={Databases}
  />
  <DrizzleStudio />
  <SponsorsLine />
  <div id="pricing"></div>
  <Pricing />
  <Twits />
</div>

<style>
  .wrap {
    max-width: 1080px;
    width: 100%;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    color: #222;
  }

  html[class~="dark"] .wrap {
    color: rgb(226, 232, 240);
  }
</style>
<script>
  window.addEventListener("beforeunload", () => {
    localStorage.setItem("sidebar-scroll", "0");
  });
</script>
